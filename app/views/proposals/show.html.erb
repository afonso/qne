<%- model_class = Proposal -%>
<div class="page-header">
  <h1>Proposta</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @proposal.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:demand_id) %>:</strong></dt>
  <dd><%= @proposal.demand_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @proposal.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sunday) %>:</strong></dt>
  <dd><%= @proposal.sunday %></dd>
  <dt><strong><%= model_class.human_attribute_name(:monday) %>:</strong></dt>
  <dd><%= @proposal.monday %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tuesday) %>:</strong></dt>
  <dd><%= @proposal.tuesday %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wednesday) %>:</strong></dt>
  <dd><%= @proposal.wednesday %></dd>
  <dt><strong><%= model_class.human_attribute_name(:thursday) %>:</strong></dt>
  <dd><%= @proposal.thursday %></dd>
  <dt><strong><%= model_class.human_attribute_name(:friday) %>:</strong></dt>
  <dd><%= @proposal.friday %></dd>
  <dt><strong><%= model_class.human_attribute_name(:saturday) %>:</strong></dt>
  <dd><%= @proposal.saturday %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              proposals_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_proposal_path(@proposal), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              proposal_path(@proposal),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
