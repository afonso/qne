<h2>
  Demandas Que Criei <%= link_to "Criar nova", new_demand_path, :class => 'btn btn-primary btn-sm' %>
</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Titulo</th>
      <th>Periodo</th>
      <th>Inicio em</th>
      <th>Quantas vezes?</th>
      <th>Status</th>
      <th>Lugar</th>
      <th>Criado em</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @demands.each do |demand| %>
      <tr>
        <td><%= link_to demand.id, demand_path(demand) %></td>
        <td><%= demand.title %></td>
        <td><%= I18n.t(demand.period) %></td>
        <td><%= demand.start_at %></td>
        <td><%= demand.how_many %></td>
        <td><%= I18n.t(demand.status) %></td>
        <td><%= demand.school.name %></td>
        <td><%= demand.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_demand_path(demand), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      demand_path(demand),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

